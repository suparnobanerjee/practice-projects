class item:
    def __init__(self,name,price,quantity):
        assert price>=0, f"Price {price} is not greater than or equal to 0!"
        assert quantity>=0, f"Quantity {quantity} is not greater than or equal to 0!"
        self.name=name
        self.price=price
        self.quantity=quantity
    def total_amt(self):
        return self.price*self.quantity

item_no=int(input("How many item(s) you would like to purchase ? "))
i=1
sum=0
while(item_no>0):
    item_name=input(f"Enter name of item[{i}] : ")
    item_price=float(input(f"Enter price of each {item_name}: "))
    item_quantity=int(input(f"Enter total quantity of {item_name}: "))
    item1=item(item_name,item_price,item_quantity)
    total1=item1.total_amt()
    print(f"Total amount to be paid for {item_name} : ", total1)
    item_no=item_no-1
    sum+=total1
    i+=1
print(f"\nNet total for all items = {sum}")


